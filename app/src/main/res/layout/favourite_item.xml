<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/article_card_view_margin"
    android:backgroundTint="#eeeeee"
    app:cardCornerRadius="@dimen/cardview_corner">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/unBookMarkFromFavourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:padding="0dp"
            android:src="@drawable/bookmark_icon_gray" />

        <TextView
            android:id="@+id/article_section_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/unBookMarkFromFavourite"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp"
            android:text="section"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/article_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_section_name_text_view"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/aritcle_item_padding"
            android:text="article title"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>